<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/ClassRoomNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_classroom_car"
            android:gravity="center_horizontal"
            android:text="一号实验楼520"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/ClassRoomName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="长安校区东区逸夫楼"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:background="#8aa6a6a6"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/ClassRoomFlow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="楼层：2"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:background="#8aa6a6a6"
            />

        <TextView
            android:id="@+id/ClassRoomUSERCOUNT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="可容纳人数：160"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:gravity="center|start"
            android:background="#8aa6a6a6"
            />


    </LinearLayout>

</LinearLayout>