<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login1"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/lesson1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lesson2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="2"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                />



            <TextView
                android:id="@+id/lesson3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="3"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/lesson4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="4"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/lesson5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="5"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lesson6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="6"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/lesson7"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="7"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/lesson8"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="8"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/lesson9"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="9"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/lesson10"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="10"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Lesson_NotMsg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/NOT_MSG"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                />

            <include layout="@layout/lesson" />

        </FrameLayout>

        <include layout="@layout/lesson" />

    </LinearLayout>

</LinearLayout>
